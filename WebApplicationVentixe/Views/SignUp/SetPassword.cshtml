@model SetPasswordViewModel
@{
    ViewData["Title"] = "Set Password";
    Layout = "_AuthLayout";
}

<div id="signup" class="card mx-auto mt-5">
    <div class="card-header text-center mt-3">
        <h2 class="h4 mb-2">Set Your password</h2>
        <p class="text-muted">Choose a safe password!</p>

        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
        {
            <div id="error-message" class="text-danger">
                @ViewBag?.ErrorMessage
            </div>
        }
    </div>
    <div class="card-body">
        <form method="post" asp-action="SetPassword" asp-controller="SignUp" novalidate>
            <div class="mb-3">
                <input asp-for="Password" class="form-control" id="password-input" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="ConfirmPassword" class="form-control" id="confirm-password-input" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-3">Continue</button>
        </form>
    </div>
</div>

﻿<script src="/js/validate.js" asp-append-version="true"></script>