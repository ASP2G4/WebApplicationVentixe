@model SetPasswordViewModel
@{
    ViewData["Title"] = "Set Password";
    Layout = "_AuthLayout";
}

<div id="signup" class="card mx-auto mt-5">
    <div class="card-header text-center mt-3">
        <h2 class="h4 mb-2">Set Your password</h2>
        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
        {
            <p>
                @ViewBag?.ErrorMessage
            </p>
        }
    </div>
    <div class="card-body">
        <form method="post" asp-action="SetPassword" asp-controller="SignUp" novalidate>
            <div class="mb-3">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Continue</button>
        </form>
    </div>
    <div class="card-footer text-center">
        <p class="mb-0">Already have an account yet? <a asp-action="Index" asp-controller="Login">Log In</a></p>
    </div>
</div>