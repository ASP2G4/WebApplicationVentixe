@* Denna funktion är skapad med hjälp av AI *@
@functions {
    string GetActiveNavLink(string controllerName)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        return currentController == controllerName ? "nav-link active" : "nav-link text-dark";
    }
}

<aside class="bg-light d-flex flex-column p-3 m-2" style="height: 100vh;"> @* Lägg style i CSS så det inte är hårdkodat på alla storlekar *@
    <div>

        <div class="d-flex justify-content-center" style="margin-bottom: 60px">
            <img src="~/Images/VentixeLogo.svg" alt="Ventixe Logo" class="d-block">
            <h1 class="d-none d-md-inline-flex ms-2">Ventixe</h1>
        </div>

        <nav class="nav flex-column">

            <a asp-controller="Home" asp-action="Index" class="@GetActiveNavLink("Home")" aria-current="page">
                <img src="~/Images/Dashboard.svg" alt="Dashboard" class="d-md-inline-flex">
                <p class="d-none d-md-inline-flex">
					Dashboard
                </p>
            </a>

            <a href="#" class="nav-link text-dark">
                    <img src="~/Images/Bookings.svg" alt="Bookings" class="d-md-inline-flex">
                    <p class="d-none d-md-inline-flex">
                        Bookings
                    </p>
            </a>

            <a asp-controller="Invoice" asp-action="Index" class="@GetActiveNavLink("Invoices")">
                    <img src="~/Images/Invoices.svg" alt="Invoices" class="d-md-inline-flex">
                    <p class="d-none d-md-inline-flex">
                        Invoices
                    </p>
            </a>

            <a href="#" class="nav-link text-dark">
                    <img src="~/Images/Events.svg" alt="Events" class="d-md-inline-flex">
                    <p class="d-none d-md-inline-flex">
                        Events
                    </p>
            </a>

        </nav>
    </div>
</aside>