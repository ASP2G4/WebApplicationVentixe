@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AuthLayout";
}

<div id="login" class="card mx-auto mt-5">
    <div class="card-header text-center mt-3">
        <h2>Forgot Your Password?</h2>
        <p class="text-muted">Enter your email address, and we'll send you a link to reset your password.</p>
        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
        {
            <div id="error-message" class="text-danger">
                @ViewBag?.ErrorMessage
            </div>
        }
    </div>

    <div class="card-body">
    <form method="post" asp-action="ForgotPassword" novalidate>
        <div class="mb-3">
                <input asp-for="Email" class="form-control" id="email-input" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
            <button type="submit" class="btn btn-primary mb-3">Send Reset Link</button>
    </form>
</div>
    <div class="card-footer text-center">
        <p class="mb-0">Already have an account yet? <a asp-action="Index" asp-controller="Login">Log In</a></p>
    </div>
</div>

﻿<script src="/js/login_validate.js" asp-append-version="true"></script>